<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_height="fill_parent" 
    android:layout_width="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="发送状态"
	/>
	<RadioGroup 
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:id="@+id/send_state">
		<RadioButton
			android:id="@+id/send_sucess_radio"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="发送成功"
		></RadioButton>
		<RadioButton
			android:id="@+id/send_fail_radio"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="发送失败"
		></RadioButton>
	</RadioGroup>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="是否回执"
	/>
	<RadioGroup 
		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:id="@+id/receipt_state">
		<RadioButton
			android:id="@+id/receipt_yes_radio"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="已回执"
		></RadioButton>
		<RadioButton
			android:id="@+id/receipt_no_radio"
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="未回执"
		></RadioButton>
	</RadioGroup>
	<Button 
		android:id="@+id/search_state_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="查询"
		/>
</LinearLayout>
