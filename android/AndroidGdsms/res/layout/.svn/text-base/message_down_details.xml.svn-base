<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:layout_width="fill_parent"  
    android:layout_height="fill_parent"
    android:background="@drawable/back"
>
<HorizontalScrollView
	android:layout_width="fill_parent"  
    android:layout_height="fill_parent"	
    android:scrollbars="vertical|horizontal"
   	>
<LinearLayout
    android:layout_width="wrap_content"  
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >  
 	<TableLayout 
 		android:id="@+id/list_table"
 		android:layout_width="wrap_content"  
    	android:layout_height="wrap_content"
			>
			<TableRow
				android:background="#20A5A5A5" 
			> 
			<TextView
				android:text="@string/details_pici"
			   android:textColor="@color/black"
			   android:width="150dp"
			   android:layout_margin="1dp"
			   android:background="#60aeebee"
			   android:gravity="center"
			   >
			   </TextView>
			
			<TextView
				
				android:text="@string/details_person"
				android:background="#60aeebee"
				android:gravity="center"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
			></TextView>
			<TextView
				
				android:text="@string/details_position"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				 android:layout_margin="1dp"
				  android:gravity="center"
			></TextView>
			<TextView
				
				android:text="@string/details_mobile"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				 android:layout_margin="1dp"
				  android:gravity="center"
			></TextView>
			<TextView
				
				android:text="@string/details_quxian"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				 android:layout_margin="1dp"
				  android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_town"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_village"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_zaihaidian"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_sendTime"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_content"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_receiptCode"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_isReceipt"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			<TextView
				android:text="@string/details_result"
				android:background="#60aeebee"
				android:textColor="@color/black"
				android:width="150dp"
				android:layout_margin="1dp"
				android:gravity="center"
			></TextView>
			</TableRow>
	
</TableLayout>
	<ListView
		android:id="@+id/detailsDataList"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignBottom="@id/list_table"
		android:cacheColorHint="#00000000"
		android:fastScrollEnabled="true"
		android:focusable="true"
		android:scrollbars="vertical"
		
	></ListView> 

</LinearLayout>
</HorizontalScrollView>

</RelativeLayout>