<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:scrollbars="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:background="@drawable/tianxie"
		android:padding="20dp">

		<TableLayout android:id="@+id/tableLayout1"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TableRow>
				<TextView android:id="@+id/textView1" android:text="@string/fieldNumber"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/fieldNumber"
					android:layout_width="400px" android:layout_height="fill_parent"
					android:singleLine="false" android:scrollbars="vertical" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView2" android:text="@string/profileLength"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/profileLength"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView3" android:text="@string/geologicalStructure"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/geologicalStructure"
					android:layout_width="400px" android:layout_height="wrap_content" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView4" android:text="@string/discoverer"
					android:gravity="left" android:textSize="25px"
					android:layout_width="100px" android:layout_height="fill_parent" />
				<EditText android:id="@+id/discoverer"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView5" android:text="@string/discoveryTime"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
					<TableLayout android:id="@+id/tableLayout3"
						android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TableRow>
				<TextView android:id="@+id/discoveryTime"
					android:layout_width="300px"  android:layout_height="60px"
					android:gravity="center"
					android:textStyle="italic" 
					android:paddingLeft="10px"
					android:paddingBottom="10px"
					
					android:editable="false" />
				<Button 
					android:id="@+id/timeButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="设置日期"	
					/>
					</TableRow>
					</TableLayout>
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView6" android:text="@string/conservationStatus"
					android:gravity="left" android:textSize="25px"
					android:layout_width="100px" android:layout_height="fill_parent" />
				<EditText android:id="@+id/conservationStatus"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView7" android:text="@string/protectionRecommendations"
					android:gravity="left" android:textSize="25px"
					android:layout_width="100px" android:layout_height="fill_parent" />
				<EditText android:id="@+id/protectionRecommendations"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView8" android:text="@string/developmentStatus"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/developmentStatus"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView9" android:text="@string/developmentProposal"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/developmentProposal"
					android:layout_width="400px" android:layout_height="fill_parent" />
			</TableRow>

			<TableRow>
				<TextView android:id="@+id/textView10" android:text="@string/level"
					android:gravity="left" android:textSize="25px"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
				<EditText android:id="@+id/level" android:layout_width="400px"
					android:layout_height="fill_parent" />
			</TableRow>

		</TableLayout>
	</LinearLayout>
</ScrollView>

