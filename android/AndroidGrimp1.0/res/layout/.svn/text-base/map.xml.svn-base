<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
    	
    <com.google.android.maps.MapView
    			android:id="@+id/map"
    			android:enabled="true"
    			android:clickable="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:apiKey="0wVTU1uoj6YqTTco7TFZWKIRsXDXLZq_BSU7ucQ"
                 />
          
    <TableLayout
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
    >
    <TableRow>
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/small"
		android:src="@drawable/small_state"
		/>
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/big"
		android:src="@drawable/big_state"
		/>
	</TableRow>
	</TableLayout> 
	<ImageView
		android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/close_state"
		android:id="@+id/close"
	></ImageView>
	<ToggleButton
		android:id="@+id/map_change"
		android:textOn="卫星地图"
		android:textOff="路线地图"
		android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerInParent="true"
	></ToggleButton>
	<ImageButton
		android:src="@drawable/btn_me"
		android:id="@+id/me"
		android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
	></ImageButton>
	<ToggleButton
		android:id="@+id/pro_change"
		android:textOn="定位方式(WIFI)"
		android:textOff="定位方式(GPS)"
		android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerInParent="true"
	></ToggleButton>
	<TextView
		android:id="@+id/loc_inf"
		android:layout_height="wrap_content"
    	android:layout_width="130dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:background="#FFFFFF"
		android:textColor="#000000"
		android:text="请稍后..."
	>
		
	</TextView>
</RelativeLayout>
